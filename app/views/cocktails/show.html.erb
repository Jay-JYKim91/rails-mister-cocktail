<div class="container my-3 col-sm-6 col-sm-offset-3">
  <h2><%= @cocktail.name %></h2>

  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item d-flex justify-content-between mb-2">
        <div>
          <h4><%= dose.description %> <%= dose.ingredient.name %></h4>
        </div>
        <div>
          <%= link_to "Remove",
                      dose_path(dose),
                      class: "btn btn-gradient",
                      method: :delete,
                      data: {confirm: "Are you sure?"}  %>
        </div>

      </li>
    <% end %>
  </ul>

  <%= link_to "âž• Add doses for #{@cocktail.name}", new_cocktail_dose_path(@cocktail), class: "text-body text-right mt-2" %><br>
</div>
